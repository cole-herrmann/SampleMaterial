<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/signUpProfileImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#D0D0D0"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/createAccountList"
        android:layout_below="@+id/signUpProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:descendantFocusability="afterDescendants"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text=""
        android:id="@+id/addPictureButton"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/signUpProfileImage"
        android:layout_marginTop="25dp"
        android:background="@drawable/add_photo_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ADD PHOTO"
        android:id="@+id/addPhotoLabel"
        android:layout_below="@+id/addPictureButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#0083E5"/>

</RelativeLayout>